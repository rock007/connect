<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mScrollView"
            android:scrollbars="none">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:id="@+id/host_layout">

                    <TextView
                        android:id="@+id/tvname"
                        style="@style/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="0dp"
                        android:text="服务端IP"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_host"
                        android:textSize="14.0dip"
                        style="@style/tv_context"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/tvname"
                        android:text="192.168.1.123" />

                    <ImageView
                        android:id="@+id/right_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="0dp"
                        android:src="@mipmap/icon_right_arrow" />


                </RelativeLayout>

                <View
                    android:background="@color/mz_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="10dp">

                    <TextView
                        style="@style/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="0dp"
                        android:text="本地IP"
                        android:id="@+id/local_tv"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_lochost"
                        android:textSize="14.0dip"
                        style="@style/tv_context"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/local_tv"
                        android:text="192.168.1.123" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="0dp"
                        android:visibility="invisible"
                        android:src="@mipmap/icon_right_arrow" />


                </RelativeLayout>
                <View
                    android:background="@color/mz_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip" />
                <TextView
                    android:id="@+id/my_orders"
                    style="@style/tv_title"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/select_item_selector"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="10dp"
                    android:visibility="gone"
                    android:drawableRight="@mipmap/icon_right_arrow"
                    android:text="消息中心" />
                <View
                    android:background="@color/mz_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip" />

                <TextView
                    android:id="@+id/tv_about_us"
                    style="@style/tv_title"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/select_item_selector"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/icon_right_arrow"
                    android:text="关于" />

                <View
                    android:background="@color/mz_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip" />

            </LinearLayout>
        </ScrollView>

</LinearLayout>

